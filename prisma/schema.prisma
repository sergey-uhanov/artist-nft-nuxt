generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  role      Role     @default(CUSTOMER)
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  password  String
}

enum Role {
  CUSTOMER
  ADMIN
  ARTIST
}
